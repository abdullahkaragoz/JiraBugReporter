{
  "manifest_version": 3,
  "name": "Jira Bug Reporter",
  "version": "1.1.0",
  "description": "Aktif sayfadan hata ve ağ bilgilerini toplayıp Jira'da bilet açar.",
  "action": { "default_popup": "popup.html", "default_title": "Jira'ya gönder" },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "cookies",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.atlassian.net/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start",
	"all_frames": true
  }]
}